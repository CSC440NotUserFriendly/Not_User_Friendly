<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/scrollitem" android:id="@+id/item" android:gravity="center">
	<ImageView android:id="@+id/icon" android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="0dip" android:visibility="invisible" />
    <TextView android:id="@+id/scrollitemtext" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon" android:textColor="#000" android:textSize="20dp"
        android:layout_marginLeft="20dp" android:layout_marginTop="10dp" />
    <LinearLayout android:id="@+id/linear" android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_below="@+id/icon" android:orientation="vertical" />
</RelativeLayout>
