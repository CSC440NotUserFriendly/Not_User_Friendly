<?xml version="1.0" encoding="utf-8"?>
<!-- this defines the rollover states of our scrollItem buttons, using the scrollitem_bg_normal and _pressed drawables -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->
    <item
        android:state_focused="false"
        android:state_selected="false"
        android:state_pressed="false"
        android:drawable="@drawable/scrollitem_bg_normal"
        />
    <item
        android:state_focused="false"
        android:state_selected="true"
        android:state_pressed="false"
        android:drawable="@drawable/scrollitem_bg_pressed"
        />

    <!-- Focused states -->
    <item
        android:state_focused="true"
        android:state_selected="false"
        android:state_pressed="false"
        android:drawable="@drawable/scrollitem_bg_pressed"
        />
    <item
        android:state_focused="true"
        android:state_selected="true"
        android:state_pressed="false"
        android:drawable="@drawable/scrollitem_bg_pressed"
        />

    <!-- Pressed -->
    <item
        android:state_pressed="true"
        android:drawable="@drawable/scrollitem_bg_pressed"
        />
</selector>
