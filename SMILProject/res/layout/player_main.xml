	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/controls"
	    android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true" 
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
		android:background="@drawable/actionbar_bg"
		android:paddingTop="3dp" android:paddingBottom="3dp" android:paddingLeft="6dp" android:paddingRight="6dp">
	    
		<ImageView android:id="@+id/playPause" android:onClick="playPause"
			android:layout_toLeftOf="@+id/stop" android:layout_width="44dp"
			android:layout_height="44dp" android:background="@drawable/actionbar_btn"
			android:layout_marginLeft="3dip" android:src="@drawable/play" />
		
		<ImageView android:id="@+id/stop" android:onClick="stop"
			android:layout_alignParentRight="true" android:layout_width="44dp"
			android:layout_height="44dp" android:background="@drawable/actionbar_btn"
			android:layout_marginLeft="3dip" android:src="@drawable/stop" />
		
	    <SeekBar
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" 
			android:layout_toLeftOf="@+id/playPause"
			android:id="@+id/seekBar"
			android:max="100"
			android:progress="0" />
	    <!-- can't figure this crap out
        	android:progressDrawable="@drawable/seekbar_progress"
        	android:thumb="@drawable/seek_thumb" -->
        	
	    <TextView
	        android:id="@+id/time"
	        android:layout_below="@+id/seekBar"
	        android:layout_toLeftOf="@+id/playPause"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="0:00" android:textSize="10dp" android:textColor="#FFFFFF" />
	    
	    <TextView
	        android:id="@+id/title"
	        android:layout_below="@+id/seekBar"
			android:layout_alignParentLeft="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Message Title" android:textColor="#FFFFFF" android:textSize="10dp" />
	    
	</RelativeLayout>
	
	<com.csc440.nuf.complay.PlayerCanvas android:id="@+id/canvas" 
        android:layout_above="@+id/controls"
	    android:layout_width="fill_parent" android:layout_height="fill_parent"
	    android:layout_alignParentLeft="true" android:layout_alignParentRight="true" />
    
</RelativeLayout>